<div class="sidebar">
    <%= render "users/show" %>
    <%= render "users/sidevar" %>
</div>
<div class="userpage">
    <div class="userinfo">
        <h1>Profile</h1>
        <ul>
            <li><div class="ptitle">Name:</div><%= @user.name%></li>
            <li><div class="ptitle">Age:</div><%= @user.age %></li>
            <li><div class="ptitle">My Team:</div>
                <% if @team != nil%>
                    <%= @team.name %>
                <% else %>
                    <%= "未選択" %>
                <% end %>
            </li>
        <ul>
    </div>
    <hr>
    <div class="teammate">
        <h2>Teammate</h2>
        <% if @team != nil %>
            <% @team_users.each do |user| %>
                <li>
                    <%= image_tag user.avatar.url, :alt => "noimage" %><br>
                    <%= link_to user.name, user_path(user) %>
                </li>
            <% end %>
        <% end %>
    </div>
</div>