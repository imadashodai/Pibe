<div class="signup_form">
    <div class="signup_label">
    <p>サインアップ</p>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            
            <%= f.label :team_id %>
            <%= f.collection_select :team_id, Team.all, :id, :name, :include_blanck => true %>
            
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            
            <%= f.label :passrord_confirmation, "Confirmation" %>
            <%= f.password_field :passrord_confirmation, class: 'form-control' %>
            
            <%= f.submit "Create my account", class: "btn-large btn-primary" %>
            <% end %>
        </div>
    </div>
</div>