<div class="signup_form">
    <div class="signup_label">
    <p>Sign Up</p>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :avatar, "プロフィール画像" %><br>
            <%= image_tag @user.avatar.url if @user.avatar %>
            <%= f.file_field :avatar %>
            
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :age, "年齢" %>
            <%= f.text_field :age, class: 'form-control' %>
            
            <%= f.label :email, "メールアドレス" %>
            <%= f.text_field :email, class: 'form-control' %>
            
            <%= f.label :team_id, "チームを選択" %>
            <%= f.collection_select :team_id, Team.all, :id, :name, :include_blanck => true %>
            
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control' %>
            
            <%= f.label :passrord_confirmation, "パスワード再入力" %>
            <%= f.password_field :passrord_confirmation, class: 'form-control' %>
            
            <%= f.submit "登録してPibeを始める！", class: "btn-large btn-primary" %>
            <% end %>
        </div>
    </div>
</div>