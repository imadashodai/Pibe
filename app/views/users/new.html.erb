<div class="signup_form">
    <h1>Sign up</h1>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@user) do |f| %>
            
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.text_field :email %>
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.label :passrord_confirmation, "Confirmation" %>
            <%= f.password_field :passrord_confirmation %>
            
            <%= f.submit "Create my account", class: "btn-large btn-primary" %>
            <% end %>
        </div>
    </div>
</div>