
<div class="signup_form">
    <h1>New team</h1>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@team) do |f| %>
            
            <%= image_tag @team.avatar.url if @team.avatar %>
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
            
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.submit "Create new team", class: "btn-large btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
